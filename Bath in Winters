import java.util.*;
public class BathWinters {
  public static void main(String args[]){
    Scanner sc = new Scanner(System.in);
    int t = sc.nextInt();
    while(t-->0){
    int X = sc.nextInt();
	int Y = sc.nextInt();  
    int A = 2*Y;
      if(A>X){
        System.out.println("0");    
      } else {
        int a = X/A;
        System.out.println(a); 
      }
	}
    }
}